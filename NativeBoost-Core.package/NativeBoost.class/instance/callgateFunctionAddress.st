accessing
callgateFunctionAddress
	
	^ gateFunction ifNil: [
		| bytes addr |

		NBRecursionDetect 
			in: #callgateFunctionAddress during: [		

			bytes := self generateCallgateCode.
			self assert: (bytes class isBytes).
		
			addr := self allocate: bytes size.
			"copy generated bytes to external memory"
			self memCopy: bytes to: addr size: bytes size.

		].
	  
		"finally set the function address"
		gateFunction := addr. 
		bootstrapping := false.
		gateFunction 
	]
